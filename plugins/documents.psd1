@{
    Files   = @{
        # Microsoft Office

        ".doc"  = @{
            Color = "Blue"
        }
        ".docx" = @{
            Color = "Blue"
        }
        ".xls"  = @{
            Color = "Green"
        }
        ".xlsx" = @{
            Color = "Green"
        }
        ".ppt"  = @{
            Color = "Red"
        }
        ".pptx" = @{
            Color = "Red"
        }
        
        # PDF and e-books

        ".pdf"  = @{
            Color = "Red"
        }
        ".epub" = @{
            Color = "Cyan"
        }
        ".mobi" = @{
            Color = "Cyan"
        }
        
        # Text documents

        ".txt"  = @{
            Color = "Gray"
        }
        ".rtf"  = @{
            Color = "Gray"
        }
        ".odt"  = @{
            Color = "Blue"
        }
        ".ods"  = @{
            Color = "Green"
        }
        ".odp"  = @{
            Color = "Red"
        }
    }

    Icons   = @{
        Files = @{
            # Microsoft Office

            ".doc"  = "📝"
            ".docx" = "📝"
            ".xls"  = "📊"
            ".xlsx" = "📊"
            ".ppt"  = "📅"
            ".pptx" = "📅"
            
            # PDF and e-books

            ".pdf"  = "📕"
            ".epub" = "📚"
            ".mobi" = "📚"
            
            # Text documents

            ".txt"  = "📄"
            ".rtf"  = "📄"
            ".odt"  = "📝"
            ".ods"  = "📊"
            ".odp"  = "📅"
        }
    }

    Folders = @{
        "docs"      = @{
            Color = "Blue"
        }
        "documents" = @{
            Color = "Blue"
        }
        "books"     = @{
            Color = "Cyan"
        }
    }
}